<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        >
        <ImageView
            android:src="@drawable/nine"
            android:id="@+id/a"
            android:layout_width="54.5dp"
            android:layout_height="86.5dp" />
        <ImageView
            android:id="@+id/operator"
            android:src="@drawable/minus"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="54.5dp"
            android:layout_height="54.5dp" />
        <ImageView
            android:src="@drawable/eight"
            android:id="@+id/b"
            android:layout_width="54.5dp"
            android:layout_height="86.5dp" />
        <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/equal"
            android:layout_gravity="center"
            android:layout_width="54.5dp"
            android:layout_height="54.5dp" />
        <ImageView
            android:layout_width="109dp"
            android:layout_height="86.5dp" />
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="1"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/one"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/two"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/one"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/three"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/two"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/four"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/one"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/five"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/two"
            android:layout_toRightOf="@id/four"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/six"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_toRightOf="@id/five"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/seven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/four"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/eight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nine"
            android:layout_toRightOf="@+id/seven"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/nine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/six"
            android:layout_toRightOf="@id/eight"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nine"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText"
            android:layout_toRightOf="@+id/three"
            android:text="C"
            android:textSize="40sp" />

        <Button
            android:id="@+id/zero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eight"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/enter"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zero"
            android:layout_below="@+id/seven"
            android:layout_toLeftOf="@+id/next"
            android:layout_toRightOf="@+id/zero"
            android:layout_toStartOf="@+id/next"
            android:text="enter"
            android:textSize="40sp" />

        <Button
            android:id="@+id/next"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/enter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/clear"
            android:layout_toRightOf="@+id/six"
            android:text="->"
            android:textSize="40sp" />
    </RelativeLayout>
</LinearLayout>
